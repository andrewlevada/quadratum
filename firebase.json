{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.js.map"
    ],
    "rewrites": [{
      "source": "/app/**",
      "destination": "/app/index.html"
    }]
  }
}
